{
    "name": "major66/oat-technical-exercise",
    "description": "OAT technical exercise user api",
    "require": {
       "php": ">=7.2.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
      "phpunit/phpunit": "^7.4"
    },
  "autoload": {
    "psr-4": {
      "Oat\\UserApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Oat\\UserApi\\Tests\\": "tests/"
    }
  },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
